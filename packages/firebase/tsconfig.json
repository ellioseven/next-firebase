{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "src",
    "paths": {
      "@collections/*": [
        "collections/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts"
  ]
}
